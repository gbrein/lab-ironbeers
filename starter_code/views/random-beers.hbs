<div class="random-beer d-flex m-5 ">
  {{#each beers as |beer|}}
  <div class="p-2 w-25 h-25"><img src="{{#if beer.image_url }} {{beer.image_url}} {{else}}/images/noImageBeer.png {{/if}}" class="rounded mx-auto d-block mt-5" alt="Logo Beers!"></div>
  <div class="p-2 w-75">
    <h2 class="font-weight-bold">{{beer.name}}</h2>
    <span class="text-secondary">{{beer.tagline}}</span>
    <p class="mt-3">{{beer.description}}</p>
    <b>Food Pairing</b>
    <ul class="mt-3">
      {{#each beer.food_pairing as |food_pairing|}}
        <li>{{food_pairing}}</li>
      {{/each}}
    </ul>
    <p><b>Brewers Tips: </b>{{beer.brewers_tips}}</p>
  </div>
  {{/each}}
</div> 